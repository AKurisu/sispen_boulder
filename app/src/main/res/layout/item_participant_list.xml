<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_position_null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="9dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="14sp"
            tools:text="1" />

        <TextView
            android:id="@+id/txt_nama_null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"
            tools:text="Nama" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/table_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_name">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/txt_position"
                android:layout_width="0dp"
                android:layout_weight="1.4"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:text="1" />

            <TextView
                android:id="@+id/txt_nama"
                android:layout_width="0dp"
                android:layout_weight="14"
                android:textStyle="bold"
                tools:text="Nama" />

            <TextView
                android:id="@+id/txt_attempt_total"
                android:layout_width="0dp"
                android:layout_weight="6.3"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:text="15 18" />
        </TableRow>

        <TableRow android:background="#808080">

            <TextView
                android:text="@string/ab"
                android:textSize="1sp"
                android:visibility="invisible" />
        </TableRow>

        <TableRow
            android:divider="#808080"
            android:showDividers="middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp">
            <TextView
                android:visibility="invisible"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                tools:text="1" />

            <TextView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:paddingStart="3dp"
                android:textAlignment="center"
                android:id="@+id/txt_topResult"
                android:textSize="11sp"
                tools:text="t1z1" />

            <TextView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:paddingStart="3dp"
                android:textAlignment="center"
                android:id="@+id/txt_atResult"
                android:textSize="11sp"
                tools:text="z2" />

            <TextView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:paddingStart="3dp"
                android:textAlignment="center"
                android:id="@+id/txt_bonusResult"
                android:textSize="11sp"
                tools:text="z6" />

            <TextView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:paddingStart="3dp"
                android:textAlignment="center"
                android:id="@+id/txt_abResult"
                android:textSize="11sp"
                tools:text="t1z2" />

            <TextView
                android:layout_weight="5"
                android:layout_width="0dp"
                android:textAlignment="center"
                android:id="@+id/txt_total"
                tools:text="11 10" />
        </TableRow>

        <TableRow android:background="#808080">

            <TextView
                android:text="@string/ab"
                android:textSize="1sp"
                android:visibility="invisible" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>